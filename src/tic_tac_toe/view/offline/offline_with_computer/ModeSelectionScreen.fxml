<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tic_tac_toe.view.offline.offline_with_computer.ModeSelectionScreenController">
   <children>
      <ImageView fitHeight="450.0" fitWidth="640.0" pickOnBounds="true">
         <image>
            <Image url="@../../../assets/background.png" />
         </image>
      </ImageView>
      <AnchorPane prefHeight="450.0" prefWidth="600.0">
         <children>
            <ImageView fx:id="backBrn" fitHeight="47.0" fitWidth="52.0" layoutX="26.0" layoutY="31.0" onMouseClicked="#onBackClicked" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../assets/ic_back.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
      <FlowPane alignment="TOP_CENTER" columnHalignment="CENTER" orientation="VERTICAL" prefHeight="450.0" prefWidth="600.0" vgap="16.0">
         <children>
            <ImageView fx:id="modeAvatar" fitHeight="115.0" fitWidth="196.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../assets/easy_avatar.png" />
               </image>
            </ImageView>
            <Text fx:id="selectModeTxt" strokeType="OUTSIDE" strokeWidth="0.0" text="Select Mode" />
            <Button fx:id="easyBtn" mnemonicParsing="false" onAction="#onEasyClicked" prefHeight="47.0" prefWidth="254.0" text="Easy" textAlignment="CENTER" />
            <Button fx:id="mediumBtn" mnemonicParsing="false" onAction="#onMediumClicked" prefHeight="47.0" prefWidth="254.0" text="Medium" textAlignment="CENTER" />
            <Button fx:id="hardBtn" mnemonicParsing="false" onAction="#onHardClicked" prefHeight="47.0" prefWidth="254.0" text="Hard" textAlignment="CENTER" />
         </children>
         <padding>
            <Insets top="24.0" />
         </padding>
      </FlowPane>
   </children>
</StackPane>
