<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Text?>

<AnchorPane stylesheets="@modeselectionscreen.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tic_tac_toe.view.offline.offline_with_computer.ModeSelectionScreenController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="860.0" pickOnBounds="true">
         <image>
            <Image url="@../../../assets/background.png" />
         </image>
      </ImageView>
      <ImageView fx:id="backBrn" fitHeight="47.0" fitWidth="52.0" layoutX="39.0" layoutY="38.0" onMouseClicked="#onBackClicked" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../assets/ic_back.png" />
         </image>
      </ImageView>
      <FlowPane alignment="CENTER" columnHalignment="CENTER" layoutX="118.0" layoutY="-2.0" orientation="VERTICAL" prefHeight="600.0" prefWidth="632.0" vgap="16.0">
         <children>
            <ImageView fx:id="modeAvatar" fitHeight="156.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../assets/easy_avatar.png" />
               </image>
            </ImageView>
            <Text fx:id="selectModeTxt" strokeType="OUTSIDE" strokeWidth="0.0" text="Select Mode" />
            <Button fx:id="easyBtn" mnemonicParsing="false" onAction="#onEasyClicked" prefHeight="47.0" prefWidth="325.0" text="Easy" textAlignment="CENTER" />
            <Button fx:id="mediumBtn" mnemonicParsing="false" onAction="#onMediumClicked" prefHeight="47.0" prefWidth="322.0" text="Medium" textAlignment="CENTER" />
            <Button fx:id="hardBtn" mnemonicParsing="false" onAction="#onHardClicked" prefHeight="47.0" prefWidth="321.0" text="Hard" textAlignment="CENTER" />
         </children>
      </FlowPane>
   </children>
</AnchorPane>
