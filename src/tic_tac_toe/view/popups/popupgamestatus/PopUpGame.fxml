<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.media.MediaView?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tic_tac_toe.view.popups.popupgamestatus.PopUpGameController">
    <stylesheets>
        <URL value="@popupgame.css" />
    </stylesheets>
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true">
         <image>
            <Image url="@../../../assets/background.png" />
         </image>
      </ImageView>
      <Label fx:id="lblStatus" layoutX="123.0" layoutY="34.0" prefHeight="35.0" prefWidth="354.0" text="OOPS! YOU LOSE!" />
      <Button fx:id="btnNewGame" layoutX="37.0" layoutY="316.0" mnemonicParsing="false" onAction="#newGameClicked" text="NEW GAME" />
      <Button fx:id="btnPlayAgain" layoutX="414.0" layoutY="316.0" mnemonicParsing="false" onAction="#playAgainClicked" text="PLAY AGAIN" />
      <MediaView fx:id="mediaView" fitHeight="200.0" fitWidth="400.0" layoutX="100.0" layoutY="100.0" preserveRatio="false" />
   </children>
</AnchorPane>
