<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="200.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="tic_tac_toe.view.popups.serverShutDownpopup.ServerShutDownpopupController">
    <stylesheets>
        <URL value="@servershutdownpopup.css" />
    </stylesheets>
   <children>
      <Label fx:id="oopsLbl" layoutX="25.0" layoutY="31.0" text="Oops!! there is an issue with connecting the server " />
      <Label fx:id="playorexitLbl" layoutX="126.0" layoutY="81.0" text="Now you can Play Offline or Exit" />
      <Button fx:id="offlineBtn" layoutX="60.0" layoutY="142.0" mnemonicParsing="false" onMouseClicked="#offlineBtn" prefHeight="37.0" prefWidth="131.0" text="Play Offline" />
      <Button fx:id="exitBtn" layoutX="475.0" layoutY="142.0" mnemonicParsing="false" onAction="#ExitClicked" prefHeight="37.0" prefWidth="131.0" text="Exit" />
   </children>
</AnchorPane>
